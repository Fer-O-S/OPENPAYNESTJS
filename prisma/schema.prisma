// Este es tu Prisma schema actualizado para usar Openpay
// Schema mínimo para Openpay - Suscripciones y Pagos únicos
// Schema original mejorado para manejar pagos únicos y suscripciones con Openpay

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id       Int    @id @default(autoincrement())
  name     String
  email    String @unique
  password String
  openpayCustomerId String? @unique // ID del cliente en Openpay

 
  orders        Orders[]
  payments      Payments[]
  subscriptions Subscriptions[] // NUEVO: para suscripciones

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Form {
  id        Int      @id @default(autoincrement())
  name      String
  email     String
  message   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Products {
  id              Int      @id @default(autoincrement())
  name            String
  description     String?
  price           Float
  currency        String
  stock           Int?     @default(0)
  active          Boolean  @default(true)
  imageUrl        String?
  mode            String   @default("default")
  
  // NUEVO: Para suscripciones
  type            ProductType @default(ONE_TIME) // ONE_TIME o SUBSCRIPTION
  interval        String?     // "month", "year" (solo para suscripciones)
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  openpayPlanId     String?   // ID del plan de Openpay para suscripciones

  // Relaciones
  orders          Orders[]
  subscriptions   Subscriptions[] // NUEVO: relación con suscripciones
}

model Orders {
  id Int @id @default(autoincrement())

  // Relación con usuario
  userId Int
  user   Users @relation(fields: [userId], references: [id])

  // Relación con producto
  productId Int
  product   Products @relation(fields: [productId], references: [id])

  quantity    Int         @default(1)
  totalAmount Decimal     @db.Decimal(10, 2)
  currency    String      @default("mxn")
  status      OrderStatus @default(PENDING)

  // Openpay IDs
  openpayTransactionId String? @unique
  paymentMethod        String?
  paidAt               DateTime?

  // Relación con pagos
  payments Payments[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// NUEVO: Modelo para suscripciones
model Subscriptions {
  id        Int                @id @default(autoincrement())
  userId    Int
  productId Int
  status    SubscriptionStatus @default(ACTIVE)
  orderId  Int? // Relación opcional con Orders
  
  openpaySubscriptionId String?  @unique
  currentPeriodEnd      DateTime
  
  user      Users    @relation(fields: [userId], references: [id])
  product   Products @relation(fields: [productId], references: [id])
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Payments {
  id Int @id @default(autoincrement())

  orderId Int?
  order   Orders? @relation(fields: [orderId], references: [id])

  userId Int
  user   Users @relation(fields: [userId], references: [id])

  // Openpay info
  openpayChargeId String?       @unique
  amount          Decimal       @db.Decimal(10, 2)
  currency        String        @default("mxn")
  status          PaymentStatus @default(PENDING)
  receiptUrl      String?
  subscriptionId  Int?     // <-- Relación opcional con Subscriptions


  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// NUEVO: Enum para tipo de producto
enum ProductType {
  ONE_TIME
  SUBSCRIPTION
}

// Enums básicos existentes
enum OrderStatus {
  PENDING
  PAID
  CANCELED
  REFUNDED
}

enum PaymentStatus {
  PENDING
  SUCCEEDED
  FAILED
  REFUNDED
}

// NUEVO: Enum para estados de suscripción
enum SubscriptionStatus {
  ACTIVE
  CANCELED
  PAST_DUE
}